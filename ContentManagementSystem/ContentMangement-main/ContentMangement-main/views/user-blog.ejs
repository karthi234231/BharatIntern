<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/user-blog.css">
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a href="/">home</a></li>
                
                <!-- Add more links to your navbar as needed -->
            </ul>
        </nav>
    </header>
    <main>
        <h1>Welcome to Your Blog</h1>
        <!-- Display a list of user's blog posts here -->
       
        <div class="user-blog-posts">
            <% userBlogPosts.forEach(function(post) { %>
                <div class="user-blog-post">
                    <h2><%= post.title %></h2>
                    <p><strong>Author:</strong> <%= post.author %></p>
                    <img src="<%= post.image %>" alt="Blog Post Image">
                    <p><strong>Content:</strong> <%= post.content %></p>
                    <div class="user-blog-actions">
                        <a href="/user-blog/edit/<%= post._id %>">Edit</a>
                        <form action="/user-blog/delete/<%= post._id %>?_method=DELETE" method="POST">
                            <input type="submit" value="Delete">
                        </form>
                    </div>
                </div>
            <% }); %>
        </div>
        
        <!-- Add a form for adding new blog posts -->
        <div class="add-blog-form">
            <h2>Add a New Blog Post</h2>
            <form action="/user-blog" method="POST">
                <div class="form-group">
                    <label for="title">Title:</label>
                    <input type="text" id="title" name="title" required>
                </div>
                <div class="form-group">
                    <label for="author">Author:</label>
                    <input type="text" id="author" name="author" required>
                </div>
                <div class="form-group">
                    <label for="image">Image URL:</label>
                    <input type="text" id="image" name="image" required>
                </div>
                <div class="form-group">
                    <label for="content">Content:</label>
                    <textarea id="content" name="content" required></textarea>
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <textarea id="email" name="email" required></textarea>
                </div>
                <div class="form-group">
                    <input type="submit" value="Add Post">
                </div>
            </form>
        </div>
    </main>
</body>
</html>
